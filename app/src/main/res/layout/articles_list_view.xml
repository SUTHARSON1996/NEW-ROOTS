<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/listviewcolor1" >

        <ImageView
            android:id="@+id/list_view_image"
            android:layout_gravity="center"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_group_black_48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-5dp"
                android:id="@+id/list_view_title"
                android:text="Android Picasso Image Loader"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load images in android using picasso image loader library."
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sept 24 2016"
                android:id="@+id/listview_date"
                android:layout_gravity="right"/>
        </LinearLayout>
</LinearLayout>


